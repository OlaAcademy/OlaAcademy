<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_light"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/left_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/special_share_icon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/left_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/cancel_message"
            android:textColor="@color/title_edge_blue"
            android:textSize="15dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/left_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_back"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text=""
            android:textColor="@color/black_51545d"
            android:textSize="18dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:paddingLeft="53dp"
            android:paddingRight="53dp"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_51545d"
            android:textSize="17dp" />

        <FrameLayout
            android:id="@+id/right_response_framlayout"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/right_response"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_setting"
                android:visibility="gone" />

            <TextView
                android:id="@+id/red_dot"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|right"
                android:layout_marginTop="5dp"
                android:background="@drawable/ret_dot_shape"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/black_51545d"
                android:textSize="8dp"
                android:visibility="gone" />
        </FrameLayout>

        <ImageView
            android:id="@+id/right_share"
            android:layout_width="33dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_response_framlayout"
            android:scaleType="centerInside"
            android:src="@drawable/special_share_icon"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_texts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/send"
            android:textColor="@color/title_edge_blue"
            android:textSize="15dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/pop_line"
        style="@style/line_horizontal_line_d5d5d5" />
</LinearLayout>
