<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="154dp"
    android:background="@drawable/selector_white_item_bg"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.michen.olaxueyuan.common.RoundRectImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:maxLength="10"
            android:paddingTop="@dimen/dp_5"
            android:text="名字"
            android:textColor="@color/black_one"
            android:textSize="15dp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_60">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="3"
            android:maxLines="3"
            android:text="我的评论"
            android:textColor="@color/light_gray_color2"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/bulletIV"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_bullet_red" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/praise_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/comment_praise_icon" />

        <TextView
            android:id="@+id/praise_num"
            style="@style/hint_text_14dp_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/praise_icon"
            android:text="99" />

        <TextView
            android:id="@+id/reply_num"
            style="@style/hint_text_14dp_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_toRightOf="@+id/praise_num"
            android:text="回复  99" />

        <TextView
            android:id="@+id/time"
            style="@style/hint_text_14dp_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="19小时前" />
    </RelativeLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginLeft="@dimen/dp_60" />
</LinearLayout>
