<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_personal_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_48">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/common_blue"
                    android:visibility="visible" />

                <com.michen.olaxueyuan.common.RoundRectImageView
                    android:id="@+id/head_bg"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:src="@color/white" />

                <com.michen.olaxueyuan.common.RoundRectImageView
                    android:id="@+id/head_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/ic_default_avatar"
                    app:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/left_return"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/icon_return_white"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:text="返回"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/right_response"
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_48"
                    android:layout_gravity="right"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_setting"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/title"
                style="@style/title_text_15dp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:text="欧拉" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:gravity="center">

                <TextView
                    android:id="@+id/role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/shape_rectangle_bg_light_green_25_dp"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_2"
                    android:text="学霸"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12" />

                <ImageView
                    android:id="@+id/vip_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_toRightOf="@+id/role"
                    android:src="@drawable/selector_vip_icon"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/sign"
                style="@style/hint_text_12dp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:text="@string/come_on_2018" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/num_focus"
                    style="@style/title_text_20dp_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/center_line"
                    android:gravity="center"
                    android:text="0" />

                <View
                    android:id="@+id/center_line"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_25"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/num_fans"
                    style="@style/title_text_20dp_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/center_line"
                    android:gravity="center"
                    android:text="100" />

                <TextView
                    style="@style/hint_text_11dp_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/num_focus"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/center_line"
                    android:gravity="center"
                    android:text="关注" />

                <TextView
                    style="@style/hint_text_11dp_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/num_focus"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/center_line"
                    android:gravity="center"
                    android:text="粉丝" />
            </RelativeLayout>
        </LinearLayout>

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_48"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <TextView
            android:id="@+id/focus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/orange" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="私聊"
            android:textColor="@color/orangered" />
    </LinearLayout>
</FrameLayout>
