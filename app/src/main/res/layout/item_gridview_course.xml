<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/iv_course_layout"
        android:layout_width="150dp"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/video_white_play_icon" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_course_layout"
        android:layout_below="@+id/iv_course_layout"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#646464"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/iv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_course_layout"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="8dp"
        android:src="@drawable/icon_time" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/iv_time"
        android:textColor="#909090"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/iv_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/tv_time"
        android:src="@drawable/icon_browse" />

    <TextView
        android:id="@+id/tv_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/iv_browse"
        android:textColor="#909090"
        android:textSize="10sp" />

</RelativeLayout>
