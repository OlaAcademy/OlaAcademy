<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="bottom"
                    android:text="2016数学真题培训班"
                    android:textColor="@color/black_323232"
                    android:textSize="15dp"/>

                <View style="@style/line_horizontal_margin_15dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                    <com.michen.olaxueyuan.common.RoundRectImageView
                        android:id="@+id/avatar_course"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_default_avatar"/>

                    <TextView
                        android:id="@+id/org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/avatar_course"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="由幂学教育出版社出版"
                        android:textColor="@color/black_323232"
                        android:textSize="13dp"/>

                </RelativeLayout>

                <View
                    style="@style/line_horizontal"
                    android:layout_height="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="课程描述"
                    android:textColor="@color/black_323232"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="共100分钟"
                    android:textColor="@color/normal_text_color"
                    android:textSize="14dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>