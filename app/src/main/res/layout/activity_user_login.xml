<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_tip"
        style="@style/normal_text_15dp_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleRL"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:text="登录欧拉MBA"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tip"
        android:layout_margin="10dp"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:text=""
        android:textSize="16sp" />
    <!--android:text="13513519435"-->
    <!--android:text="13581574738"-->

    <ImageView
        android:id="@+id/line_divider_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_phone"
        android:layout_margin="5dp"
        android:background="@color/common_grey" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_divider_1"
        android:layout_margin="10dp"
        android:background="@null"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:text=""
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/line_divider_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_pass"
        android:layout_margin="5dp"
        android:background="@color/common_grey" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_below="@+id/line_divider_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/rectangle_blue_3dp_btn_bg"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomRL"
        android:gravity="center">

        <ImageView
            android:id="@+id/login_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="59dp"
            android:src="@drawable/qq" />

        <ImageView
            android:id="@+id/login_weixin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="59dp"
            android:src="@drawable/weixin" />

        <ImageView
            android:id="@+id/login_weibo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/weibo" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/bottomRL"
        android:background="@color/common_grey"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/bottomRL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:text="忘记密码？"
            android:textColor="@color/common_blue" />

        <Button
            android:id="@+id/btn_logins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_login_blue"
            android:visibility="gone" />

    </RelativeLayout>


</RelativeLayout>
