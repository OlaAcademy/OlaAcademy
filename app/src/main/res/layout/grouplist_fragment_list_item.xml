<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/selector_white_item_bg">

    <com.michen.olaxueyuan.common.RoundRectImageView
        android:id="@+id/avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/avatar"
        android:ellipsize="end"
        android:maxLength="10"
        android:singleLine="true"
        android:text="名字"
        android:textColor="@color/black_272b36"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/member_count"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/avatar"
        android:background="@drawable/blue_text_bg"
        android:drawableLeft="@drawable/group_member_count_icon"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="29人"
        android:textColor="@color/white"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/introduce_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/member_count"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/avatar"
        android:text="学习了:"
        android:textColor="@color/black_a4a6a9"
        android:textSize="10dp" />

    <Button
        android:id="@+id/join_group"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/blue_side_text_bg"
        android:text="关注"
        android:textColor="@color/common_blue"
        android:textSize="10dp" />

    <View
        style="@style/line_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp" />
</RelativeLayout>
