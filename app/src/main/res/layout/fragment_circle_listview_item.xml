<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_white_item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.michen.olaxueyuan.common.RoundRectImageView
            android:id="@+id/avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:scaleType="centerInside"
            android:src="@drawable/ic_default_avatar" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/avatar"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:text="欧拉学院"
            android:textColor="@color/black_323232"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="@color/title_hint_text_color"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/study_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="12dp"
            android:text="学习了:"
            android:textColor="@color/black_323232"
            android:textSize="14dp" />

    </RelativeLayout>

    <com.snail.photo.util.NoScrollGridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp" />

    <TextView
        android:id="@+id/child_content"
        style="@style/hint_text_14dp_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_comment_avatar"
        android:layout_below="@+id/media_view"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="次级内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/num_read"
            style="@style/hint_text_12dp_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/comment_praise"
            android:src="@drawable/icon_comment"
            android:text="1人预览" />

        <TextView
            android:id="@+id/num_comment"
            style="@style/hint_text_12dp_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@+id/comment_praise"
            android:src="@drawable/icon_comment"
            android:text="1条评论" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_searche_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/type_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_white_item_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_share"
                android:drawingCacheQuality="high"
                android:text="分享好友"
                android:textColor="@color/special_read_text_color"
                android:textSize="14dp" />
        </LinearLayout>

        <View style="@style/line_vertical" />

        <LinearLayout
            android:id="@+id/focus_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@drawable/selector_white_item_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/focus_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_share"
                android:drawingCacheQuality="high"
                android:text="添加回答"
                android:textColor="@color/special_read_text_color"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10">

        <TextView
            android:id="@+id/comment_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_praise_normal"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/LightTextColor" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:src="@drawable/icon_comment" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/comment"
            android:padding="8dp"
            android:src="@drawable/icon_share" />
    </RelativeLayout>

    <View style="@style/line_horizontal" />
</LinearLayout>
