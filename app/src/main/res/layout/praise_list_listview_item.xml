<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/selector_white_item_bg">

    <com.michen.olaxueyuan.common.RoundRectImageView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_default_avatar" />

    <TextView
        android:id="@+id/title"
        style="@style/title_text_15dp_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/avatar"
        android:text="名字" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:paddingRight="@dimen/dp_15"
        android:text="时间"
        android:textColor="@color/title_hint_text_color"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/study"
        style="@style/normal_text_13dp_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/avatar"
        android:text="赞了你的评论" />

    <View
        style="@style/line_horizontal"
        android:layout_alignParentBottom="true" />
</RelativeLayout>


